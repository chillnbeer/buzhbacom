# Кодировку и запрет листинга
AddDefaultCharset utf-8
Options -Indexes

# JSON: корректный тип и без кэша
<IfModule mod_headers.c>
  <FilesMatch "\.json$">
    Header set Content-Type "application/json; charset=utf-8"
    Header set Cache-Control "no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# Запретить доступ к бэкапам и логам (через Rewrite/Files)
RewriteEngine On
RewriteRule ^data\.backups/ - [F,L]

RewriteEngine On
# Любой запрос к /bot2/data.json подсовывает корневой /data.json
RewriteRule ^data\.json$ /data.json [L]


<Files "bot.log">
  Require all denied
</Files>
